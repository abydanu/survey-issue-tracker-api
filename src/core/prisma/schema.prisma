generator client {
  provider = "prisma-client-js"
  output   = "../../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          String    @id @default(cuid())
  username    String    @unique
  password    String
  name        String
  role        Role      @default(USER)
  lastLoginAt DateTime? @map("last_login_at")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("users")
}

enum Role {
  ADMIN
  USER
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("sessions")
}

model SyncLog {
  id        String   @id @default(cuid())
  status    Status
  message   String?
  sheetName String?  @map("sheet_name")
  syncedAt  DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("sync_logs")
}

enum Status {
  SUCCESS
  FAILED
}

enum SyncStatus {
  SYNCED      
  PENDING     
  CONFLICT    
  ERROR       
}

model NewBgesB2BOlo {
  id String @id @default(cuid())
  umur              Int?
  bln               String?
  tglInputUsulan    DateTime? @map("tgl_input_usulan") // Tanggal input (untuk chart)
  idKendala         String    @unique @map("id_kendala") // ID KENDALA (relasi dengan Sheet 1)
  jenisOrder        String?   @map("jenis_order") // NEW/ADD
  
  // ===== INFORMASI PELANGGAN =====
  datel             String?
  sto               String?
  namaPelanggan     String?   @map("nama_pelanggan")
  latitude          String?
  longitude         String?
  
  // ===== KENDALA & PLAN =====
  jenisKendala      JenisKendala?   @map("jenis_kendala")
  planTematik       PlanTematik?   @map("plan_tematik")
  
  // ===== RAB & IHLD =====
  rabHld            Decimal?  @map("rab_hld") @db.Decimal(15, 0)
  ihldValue         BigInt?   @map("ihld_value") @db.BigInt
  
  // ===== STATUS =====
  statusUsulan      StatusUsulan?   @map("status_usulan")
  statusIhld        String?   @map("status_ihld")
  idEprop           String?   @map("id_eprop")
  statusInstalasi   StatusInstalasi?   @map("status_instalasi")
  keterangan        Keterangan?   @map("keterangan")
  newSc             String?   @map("new_sc")
  
  namaOdp           String?   @map("nama_odp")
  tglGolive         DateTime? @map("tgl_golive")
  
  // ===== AVAILABILITY =====
  avai              Int?
  used              Int?
  isTotal           Int?      @map("is_total")
  occPercentage     Decimal?  @map("occ_percentage") @db.Decimal(5, 2)
  
  ndeUsulan         NdeUsulanB2B? // One-to-one relation
  
  syncStatus        SyncStatus @default(SYNCED) @map("sync_status")
  lastSyncAt        DateTime?  @map("last_sync_at")
  sheetRowNumber    Int?       @map("sheet_row_number")
  
  createdAt         DateTime   @default(now()) @map("created_at")
  updatedAt         DateTime   @updatedAt @map("updated_at")

  @@index([idKendala])
  @@index([bln])
  @@index([tglInputUsulan])
  @@index([datel])
  @@index([sto])
  @@index([statusUsulan])
  @@index([statusInstalasi])
  @@map("new_bges_b2b_olo")
}

model NdeUsulanB2B {
  id String @id @default(cuid())

  // ===== PRIMARY KEY & RELASI =====
  no                String    @unique // NO (primary identifier di sheet 1)
  nomorNcx          String    @unique @map("nomor_ncx") // Nomor NCX/Starclick (FK ke Sheet 2)
  
  // ===== KOLOM YANG BISA DIEDIT (NO FORMULA) =====
  statusJt          StatusJt?   @map("status_jt") // ‚úèÔ∏è Editable
  c2r               Decimal?  @db.Decimal(10, 2) // ‚úèÔ∏è Editable
  alamatInstalasi   String?   @map("alamat_instalasi") @db.Text // ‚úèÔ∏è Editable
  jenisLayanan      String?   @map("jenis_layanan") // ‚úèÔ∏è Editable
  nilaiKontrak      Decimal?  @map("nilai_kontrak") @db.Decimal(15, 0) // ‚úèÔ∏è Editable
  rabSurvey         Decimal?  @map("rab_survey") @db.Decimal(15, 0) // ‚úèÔ∏è Editable
  nomorNde          String?   @map("nomor_nde") // ‚úèÔ∏è Editable
  progressJt        String?   @map("progress_jt") // ‚úèÔ∏è Editable
  namaOdp           String?   @map("nama_odp") // ‚úèÔ∏è Editable
  jarakOdp          Decimal?  @map("jarak_odp") @db.Decimal(10, 2) // ‚úèÔ∏è Editable
  keterangan        String?   @db.Text // ‚úèÔ∏è Editable
  
  // ===== KOLOM DARI FORMULA (READ-ONLY, ambil dari Sheet 2) =====
  // Kolom ini di-sync dari hasil formula di Sheet 1
  datel             String?   // üîó Dari Sheet 2 (via formula)
  sto               String?   // üîó Dari Sheet 2 (via formula)
  namaPelanggan     String?   @map("nama_pelanggan") // üîó Dari Sheet 2
  latitude          String?   // üîó Dari Sheet 2
  longitude         String?   // üîó Dari Sheet 2
  ihldLopId         Int?      @map("ihld_lop_id") // üîó Dari Sheet 2
  planTematik       String?   @map("plan_tematik") // üîó Dari Sheet 2
  rabHld            Decimal?  @map("rab_hld") @db.Decimal(15, 0) // üîó Dari Sheet 2
  statusUsulan      String?   @map("status_usulan") // üîó Dari Sheet 2
  statusInstalasi   StatusInstalasi?   @map("status_instalasi") // üîó Dari Sheet 2
  
  masterData        NewBgesB2BOlo? @relation(fields: [nomorNcx], references: [idKendala])
  
  syncStatus        SyncStatus @default(SYNCED) @map("sync_status")
  lastSyncAt        DateTime?  @map("last_sync_at")
  sheetRowNumber    Int?       @map("sheet_row_number")
  
  createdAt         DateTime   @default(now()) @map("created_at")
  updatedAt         DateTime   @updatedAt @map("updated_at")

  @@index([no])
  @@index([nomorNcx])
  @@index([datel])
  @@index([sto])
  @@index([syncStatus])
  @@map("nde_usulan_b2b")
}

